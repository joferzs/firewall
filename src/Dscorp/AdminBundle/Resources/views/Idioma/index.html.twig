{% extends '::base.html.twig' %} 
{% block title %}Admin Idioma{% endblock %}
{% block contenido %}
<table class="table-tam">
    <tr>
        <td><h1>Idioma</h1></td>
        <td class="side"><a href="{{ path('idioma_new') }}" class="btn btn-primary-hold side">Nuevo idioma</a></td>
    </tr>
</table>

<table class="table table-striped table-bordered table-hover dataTables-example">
    <thead>
        <tr>
            <th>Id</th>
            <th>Idioma</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('idioma_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombreIdioma }}</td>
                <td width="30%">
                    <a href="{{ path('idioma_show', { 'id': entity.id }) }}" class="btn btn-show-hold">ver</a>
                    <a href="{{ path('idioma_edit', { 'id': entity.id }) }}" class="btn btn-edit-hold">editar</a>  
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}