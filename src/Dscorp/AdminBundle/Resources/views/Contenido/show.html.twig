{% extends '::base.html.twig' %} 
{% block title %}Admin Cotenido{% endblock %}
{% block contenido %}
<h1>Contenido</h1>

<table class="table table-striped table-bordered table-hover dataTables-example">
    <tbody>
        <tr>
            <th>Id</th>
            <th>Contenido</th>
        </tr>
        <tr>
            <td>{{ entity.id }}</td>            
            <td>{{ entity.nombreContenido }}</td>
        </tr>
    </tbody>
</table>

<table>
    <tr>
        <td>
            <a href="{{ path('contenido') }}" class="btn btn-outline btn-back" >Regresar</a>
        </td>
        <td>
            <form action="{{ path('contenido_delete', { 'id': entity.id }) }}" method="post" class="delet">
                {{ form_widget(delete_form) }}
                <button type="submit" class="btn btn-outline btn-danger">Eliminar</button>
            </form>
        </td>
        <td>
            <a href="{{ path('contenido_edit', { 'id': entity.id }) }}" class="btn btn-outline btn-edit">
                Editar
            </a>
        </td>
    </tr>
</table>

{% endblock %}