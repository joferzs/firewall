{% extends '::base.html.twig' %} 
{% block title %}Admin Cotenido{% endblock %}
{% block contenido %}
<h1>Contenido</h1>
<table class="table table-striped table-bordered table-hover dataTables-example">
    <thead>
        <tr>
            <th>Id</th>
            <th>Contenido</th>
            <th>Subtema</th>
            <th>Imagen</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('contenido_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td><p class="scroll">{{ entity.nombreContenido }}</p></td>
            <td>{{ entity.subtema }}</td>
            <td>{{ entity.imagenes }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('contenido_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('contenido_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<ul>
    <li>
        <a href="{{ path('contenido_new') }}">
            Create a new entry
        </a>
    </li>
</ul>

{% endblock %}