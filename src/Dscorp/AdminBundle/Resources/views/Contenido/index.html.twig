{% extends '::base.html.twig' %} 
{% block title %}Admin Cotenido{% endblock %}
{% block contenido %}
<table class="table-tam">
    <tr>
        <td><h1>Contenido</h1></td>
        <td class="side"><a href="{{ path('contenido_new') }}" class="btn btn-primary-hold side">Nuevo contenido</a></td>
    </tr>
</table>
<table class="table table-striped table-bordered table-hover dataTables-example">
    <thead>
        <tr>
            <th>Id</th>
            <th>Contenido</th>
            <th>Subtema</th>
            <th>Imagen</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('contenido_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td><p class="scroll">{{ entity.nombreContenido }}</p></td>
                <td>{{ entity.subtema }}</td>
                <td>{{ entity.imagenes }}</td>
                <td width="30%">
                    <a href="{{ path('contenido_show', { 'id': entity.id }) }}" class="btn btn-show-hold">ver</a>
                    <a href="{{ path('contenido_edit', { 'id': entity.id }) }}" class="btn btn-edit-hold">editar</a>  
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}