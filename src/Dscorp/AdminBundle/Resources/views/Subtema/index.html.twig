{% extends '::base.html.twig' %} 
{% block title %}Admin Subtema{% endblock %}
{% block contenido %}
<table class="table-tam">
    <tr>
        <td><h1>Subtema</h1></td>
        <td class="side"><a href="{{ path('subtema_new') }}" class="btn btn-primary-hold side">Nuevo subtema</a></td>
    </tr>
</table>
{% for entityIdioma in entitiesIdioma %}
<table class="table table-striped table-bordered table-hover dataTables-example" >
    <thead>
        <tr><th colspan="4"><h4>Idioma: {{entityIdioma.nombreIdioma}}</h4></th></tr>
        <tr>
            <th>Id</th>
            <th>Nombresub</th>
            <th>Nombretema</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entityTema in entitiesTema %}
        {% for entity in entities if entity.tema == entityTema.nombreTema and entityTema.idioma == entityIdioma.nombreIdioma %}
            <tr>
                <td><a href="{{ path('subtema_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombreSub }}</td>
                <td>{{ entity.tema }}</td>
                <td width="30%">
                    <a href="{{ path('subtema_show', { 'id': entity.id }) }}" class="btn btn-show-hold">ver</a>
                    <a href="{{ path('subtema_edit', { 'id': entity.id }) }}" class="btn btn-edit-hold">editar</a>  
                </td>
            </tr>
        {% endfor %}
        {% endfor %}
    </tbody>
</table>
{% endfor %}

{% endblock %}