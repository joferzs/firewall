{% extends '::base.html.twig' %} 
{% block title %}Admin Subtema{% endblock %}
{% block contenido %}
<h1>Subtema list</h1>
{% for entityIdioma in entitiesIdioma %}
<table class="table table-striped table-bordered table-hover dataTables-example" >
    <thead>
        <tr><th colspan="4"><h4>{{entityIdioma.nombreIdioma}}</h4></th></tr>
        <tr>
            <th>Id</th>
            <th>Nombresub</th>
            <th>Nombretema</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entityTema in entitiesTema %}
    {% for entity in entities if entity.tema == entityTema.nombreTema and entityTema.idioma == entityIdioma.nombreIdioma %}
        <tr>
            <td><a href="{{ path('subtema_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nombreSub }}</td>
            <td>{{ entity.tema }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('subtema_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('subtema_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    {% endfor %}
    </tbody>
</table>
{% endfor %}

<ul>
    <li>
        <a href="{{ path('subtema_new') }}">
            Create a new entry
        </a>
    </li>
</ul>

{% endblock %}