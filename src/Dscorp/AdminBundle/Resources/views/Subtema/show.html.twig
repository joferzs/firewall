{% extends '::base.html.twig' %} 
{% block title %}Admin Subtema{% endblock %}
{% block contenido %}
<h1>Subtema</h1>

<table class="table table-striped table-bordered table-hover dataTables-example" >
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nombresub</th>
            <td>{{ entity.nombreSub }}</td>
        </tr>
        <tr>
            <th>NombreTema</th>
            <td>{{ entity.tema }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('subtema') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('subtema_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('subtema_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}