{% extends '::base.html.twig' %} 
{% block title %}Admin Tema{% endblock %}
{% block contenido %}
<table class="table-tam">
    <tr>
        <td><h1>Tema</h1></td>
        <td class="side"><a href="{{ path('tema_new') }}" class="btn btn-primary-hold side">Nuevo tema</a></td>
    </tr>
</table>
{% for entityIdioma in entitiesIdioma %}
<table class="table table-striped table-bordered table-hover dataTables-example">
    <thead>
        <tr><th colspan="4"><h4>Idioma: {{entityIdioma.nombreIdioma}}</h4></th></tr>
        <tr>
            <th>Id</th>
            <th>Tema</th>
            <th>Idioma</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities if entity.idioma == entityIdioma.nombreIdioma %}
            <tr>
                <td><a href="{{ path('tema_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombreTema }}</td>
                <td>{{ entity.idioma }}</td>
                <td width="30%">
                    <a href="{{ path('tema_show', { 'id': entity.id }) }}" class="btn btn-show-hold">ver</a>
                    <a href="{{ path('tema_edit', { 'id': entity.id }) }}" class="btn btn-edit-hold">editar</a>  
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endfor %}

{% endblock %}