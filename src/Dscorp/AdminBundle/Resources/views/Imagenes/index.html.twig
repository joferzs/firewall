{% extends '::base.html.twig' %} 
{% block title %}Admin Imagenes{% endblock %}
{% block contenido %}
<table class="table-tam">
    <tr>
        <td><h1>Imagenes</h1></td>
        <td class="side"><a href="{{ path('imagenes_new') }}" class="btn btn-primary-hold side">Nueva imagen</a></td>
    </tr>
</table>
<table class="table table-striped table-bordered table-hover dataTables-example">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre de la imagen</th>
            <th>Path</th>
            <th>Imagen</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('imagenes_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombreImagen }}</td>
                <td>{{ entity.path }}</td>
                <td>{{ entity.imagen }}</td>
                <td width="30%">
                    <a href="{{ path('imagenes_show', { 'id': entity.id }) }}" class="btn btn-show-hold">ver</a>
                    <a href="{{ path('imagenes_edit', { 'id': entity.id }) }}" class="btn btn-edit-hold">editar</a>  
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}