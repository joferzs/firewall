{% extends '::base.html.twig' %} 
{% block title %}Admin Imagenes{% endblock %}
{% block contenido %}
<h1>Imagenes</h1>

<table class="table table-striped table-bordered table-hover dataTables-example">
    <tbody>
        <tr>
            <th>Id</th>
            <th>Nombreimagen</th>
            <th>Path</th>
            <th>Imagen</th>
            
        </tr>
        <tr>
            <td>{{ entity.id }}</td>
            <td>{{ entity.nombreImagen }}</td>
            <td>{{ entity.path }}</td><td>{{ entity.imagen }}</td>
        </tr>
    </tbody>
</table>

<table>
    <tr>
        <td>
            <a href="{{ path('imagenes') }}" class="btn btn-outline btn-back" >Regresar</a>
        </td>
        <td>
            <form action="{{ path('imagenes_delete', { 'id': entity.id }) }}" method="post" class="delet">
                {{ form_widget(delete_form) }}
                <button type="submit" class="btn btn-outline btn-danger">Eliminar</button>
            </form>
        </td>
        <td>
            <a href="{{ path('imagenes_edit', { 'id': entity.id }) }}" class="btn btn-outline btn-edit">
                Editar
            </a>
        </td>
    </tr>
</table>

{% endblock %}