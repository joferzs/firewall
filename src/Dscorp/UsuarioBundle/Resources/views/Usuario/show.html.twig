{% extends '::base.html.twig' %} 
{% block title %}Admin Tema{% endblock %}
{% block contenido %}
<h1>Usuario</h1>

<table class="table table-striped table-bordered table-hover dataTables-example">
    <tbody>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Status</th>
        </tr>
        <tr>
            <td>{{ entity.id }}</td>
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.status }}</td>
        </tr>
    </tbody>
</table>

<table>
    <tr>
        <td>
            <a href="{{ path('usuario') }}" class="btn btn-outline btn-back" >Regresar</a>
        </td>
        <td>
            <form action="{{ path('usuario_delete', { 'id': entity.id }) }}" method="post" class="delet">
                {{ form_widget(delete_form) }}
                <button type="submit" class="btn btn-outline btn-danger">Eliminar</button>
            </form>
        </td>
        <td>
            <a href="{{ path('usuario_edit', { 'id': entity.id }) }}" class="btn btn-outline btn-edit">
                Editar
            </a>
        </td>
    </tr>
</table>

{% endblock %}