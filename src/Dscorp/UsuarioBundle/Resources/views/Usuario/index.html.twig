{% extends '::base.html.twig' %} 
{% block title %}Admin Usuario{% endblock %}
{% block contenido %}
<table class="table-tam">
    <tr>
        <td><h1>Usuarios</h1></td>
        <td class="side"><a href="{{ path('usuario_new') }}" class="btn btn-primary-hold side">Agregar Usuario</a></td>
    </tr>
</table>

<table class="table table-striped table-bordered table-hover dataTables-example">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Status</th>
            <th>Permisos</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('usuario_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.email }}</td>
                <td>
                    {% if entity.status == 1 %}
                    Activo
                    {% else %}
                    Inactivo
                    {% endif %}
                </td>
                <td>
                    {% if entity.userroles == 'ROLE_ADMIN' %}
                    Administrador
                    {% else %}
                    Invitado
                    {% endif %}
                <td width="30%">
                    <a href="{{ path('usuario_show', { 'id': entity.id }) }}" class="btn btn-show-hold">ver</a>
                    <a href="{{ path('usuario_edit', { 'id': entity.id }) }}" class="btn btn-edit-hold">editar</a>  
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}