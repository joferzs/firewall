<!DOCTYPE html>
<html>
    <head>
        <title>Fucking Login</title>
        <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
        <script src="https://code.angularjs.org/1.3.15/angular-animate.min.js"></script>
        <link href="{{ asset('bundles/dscorpusuario/css/animaciones.css') }}" rel="stylesheet">
        <!--<link href="{{ asset('bundles/dscorpusuario/css/styleslogin.css') }}" rel="stylesheet" />-->
        <script src="{{ asset('bundles/dscorpusuario/angular/app.js')}}"></script>
        <style type="text/css">
            .error {
                border-color: #39607D !important;
                border-bottom: 4px solid #39607D !important; /*#2C0000*/
            }
            .warning {
                border-color: #470000 !important;
            }
            .regist{
                margin: -23px 0px 2px 15px;
                border-bottom: 1px solid #3E656F !important;
                border-top: 1px solid #3E656F !important;
                width: 90% !important;
            }
        </style>
    </head>
    <body ng-app='app' ng-controller="appCtrl">
        <div class="login">
            <div class="heading enterhead">
                <table>
                    <tr>
                        <td>
                            <div>
                                <h1>Registrar</h1><br><br>
                                <form action="{{ path('usuario_create_login') }}" method="post" {{ form_enctype(form) }} name='exampleForm'>
                                    {{ form_errors(form) }}

                                    <div>
                                        {{ form_label(form.task) }}
                                        {{ form_errors(form.task) }}
                                        {{ form_widget(form.task) }}
                                    </div>

                                    <div>
                                        {{ form_label(form.dueDate) }}
                                        {{ form_errors(form.dueDate) }}
                                        {{ form_widget(form.dueDate) }}
                                    </div>

                                    {{ form_rest(form) }}
                                    <br><button type="submit" class="btn pull-right float" ng-disabled='!exampleForm.$valid'>Ok</button><br><br><br>
                                </form><br><br><br><br>
                            </div>
                        </td>
                    </tr>
                </table>
             </div>
        </div>
    </body>
</html>