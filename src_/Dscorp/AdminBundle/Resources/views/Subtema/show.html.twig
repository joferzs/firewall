{% extends '::base.html.twig' %} 
{% block title %}Admin Subtema{% endblock %}
{% block contenido %}
<h1>Subtema</h1>

<table class="table table-striped table-bordered table-hover dataTables-example" >
    <tbody>
        <tr>
            <th>Id</th>
            <th>Nombre del subtema</th>
            <th>tema</th>            
        </tr>
        <tr>
            <td>{{ entity.id }}</td>            
            <td>{{ entity.nombreSub }}</td>
            <td>{{ entity.tema }}</td>        
        </tr>
    </tbody>
</table>

<table>
    <tr>
        <td>
            <a href="{{ path('subtema') }}" class="btn btn-outline btn-back" >Regresar</a>
        </td>
        <td>
            <form action="{{ path('subtema_delete', { 'id': entity.id }) }}" method="post" class="delet">
                {{ form_widget(delete_form) }}
                <button type="submit" class="btn btn-outline btn-danger">Delete</button>
            </form>
        </td>
        <td>
            <a href="{{ path('subtema_edit', { 'id': entity.id }) }}" class="btn btn-outline btn-edit">
                Edit
            </a>
        </td>
    </tr>
</table>

{% endblock %}